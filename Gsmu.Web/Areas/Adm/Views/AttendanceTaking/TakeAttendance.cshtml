@{
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Areas/Adm/Scripts/AttendanceTaking/AttendanceTaking.js")
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="row form-group form-group-sm">
            <div class="attendance-header-title">

            </div>
            <div class="attendance-header-2">

                     Take or Modify Attendance
            </div>
            <div style="margin-top:30px">
                    <div id="attendance-grid-container">
                        <table id="attendance-grid" class="table table-striped table-hover Grid-Header"></table>
                    </div>

            </div>
            <div class="attendnace-button-area">
                <input type="radio"  name="attendance-finalize" class="attended-radio spacing-radio" > Finalize Attendance</input>
