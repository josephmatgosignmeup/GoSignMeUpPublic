                <input type="radio"  name="attendance-action" class="attended-radio spacing-radio" value="checkedonly">Transcribe Checked</input>
                <input type="radio"  name="attendance-action" class="attended-radio spacing-radio" value="all">Transcribe All</input>
                <input type="button" value="Submit" class="attendance-submit spacing-radio" onclick="AttendanceConfiguration.Actions()" />
