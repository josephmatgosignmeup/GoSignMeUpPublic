<div id="widget-course-date-times">
    <div class="panel panel-default">
        <div class="panel-heading gsmu-sub-panel-heading">
            <div class="panel-title pull-left">
                Dates and Times
            </div>
            <div class="pull-right">
                <div id="course-date-time-btns">
                    <div>
                        <div class="toggle-middle">Course Online <input type="checkbox" id="course-isonline" data-size="mini"></div>
                        <button type="button" class="btn btn-warning btn-xs edit" onclick="courseDateEditor.initEditor()"><span class="glyphicon glyphicon-pencil"></span></button>
                        <button type="button" class="btn btn-success btn-xs save" onclick="courseDateEditor.save()"><span class="glyphicon glyphicon-ok"></span></button>
                        <button type="button" class="btn btn-danger btn-xs cancel" onclick="courseDateEditor.initView()"><span class="glyphicon glyphicon-remove"></span></button>
                    </div>
                </div>
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="panel-body gsmu-sub-panel-body panel-collapse collapse in scroll-y" style="height: 500px !important">
           
            <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="#time-widget-info" data-toggle="tab">Information</a></li>
                <li role="presentation"><a href="#time-widget-enrollment" data-toggle="tab">Enrollment Options</a></li>
                <li role="presentation"><a href="#time-widget-display-comments" data-toggle="tab">Display Comments</a></li>
            </ul>
            <div class="tab-content">
                <div id="time-widget-info" class="tab-pane fade in active">
                    <div id="course-date-add-container" class="row pad-x-10 pad-bot-10 text-right">
                        <button type="button" onclick="courseDateEditor.addNewRow()" class="btn btn-xs btn-info" id="course-date-add-btn"><span class="glyphicon glyphicon-plus-sign"></span> &nbsp; Add New Record</button>
                    </div>
                    <table id="course-date-time-grid" class="table table-striped table-hover"></table>
                </div>
                <div id="time-widget-enrollment" class="tab-pane fade">
                    <div class="col-lg-12">
                        <div class="row pad-bot-10">
                            <div class="col-lg-5">
                                Course will show closed for enrollment
                            </div>
                            <div class="col-lg-5">
                                <input type="number" id="course-datatimes-course-close-days" class="form-control input-sm" name="CourseCloseDays" />
                            </div>
                        </div>
                        <div class="row pad-bot-10">
                            <div class="col-lg-5">
                                Show on Public Home for # of days
                            </div>
                            <div class="col-lg-5">
                                <input type="number" id="course-datatimes-view-past-courses-days" class="form-control input-sm" name="ViewPastCoursesDays" />
                            </div>
                        </div>
                    </div>
                </div>
                <div id="time-widget-display-comments" class="tab-pane fade">
                    <div class="col-lg-12">
                        <div class="row pad-bot-10">
                            If the Start and end time display comment field is used, it will not show, the start and finish time of the course.
                        </div>
                        <div class="row pad-bot-10">
                            <input type="text" id="course-datatimes-start-end-time-display" class="form-control input-sm" name="StartEndTimeDisplay" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Areas/Adm/Scripts/Widgets/CourseDateTimes.js")

