            <div class="col-lg-7">
                <input type="checkbox" id="course-credits-hide-public" data-size="mini" class="bootstrap-toggle" />
            </div>
        </div>
        <div class="row pad-bot-10">
            <div class="col-lg-5">Allow credits to rollover: </div>
            <div class="col-lg-7">
                <input type="checkbox" id="course-credits-allow-rollover" data-size="mini" class="bootstrap-toggle" />
            </div>
        </div>
     </div>
