<div id="widget-course-credits">
    <div class="col-lg-12">
        <div class="row pad-bot-10">
            <div class="col-lg-5">CEU : </div>
            <div class="col-lg-7">
                <input type="number" class="form-control input-sm" id="course-credits-ceu" name="CEUCredit" value="0" />
            </div>
        </div>
        <div class="row pad-bot-10">
            <div class="col-lg-5">Inservice : </div>
            <div class="col-lg-7">
                <input type="number" class="form-control input-sm" id="course-credits-inservice" name="InServiceHours" value="0" />
            </div>
        </div>
        <div class="row pad-bot-10">
            <div class="col-lg-5">Clock Hours : </div>
            <div class="col-lg-7">
                <input type="number" class="form-control input-sm" id="course-credits-custom-credit" name="CustomCreditHours" value="0" />
