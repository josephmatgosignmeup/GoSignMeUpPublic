<div id="widget-course-confirmation-email">
    <div class="panel panel-default">
        <div class="panel-heading gsmu-sub-panel-heading">
            <div class="panel-title pull-left">
                Course Confirmation E-Mail
            </div>
            <div class="pull-right">
                <div id="course-confirmation-editor-btns">
                    <div>
                        <div class="btn-group">
                            <select id="course-confirmation-noreg-email-dropdown" data-live-search="true" data-style="btn-xs btn-primary">
                                <option value="-1">Select Email Type</option>
                                <option value="0">Normal</option>
                                <option value="1">No Reminder  E-mail</option>
                                <option value="2">No Confirmation E-mail</option>
                                <option value="3">No Email</option>
                                <option value="4">No Cancellation E-mail</option>
                            </select>
                        </div>
                        <button type="button" class="btn btn-default btn-xs attach" onclick="CourseConfirmationEditor.openFileInput()"><span class="fa fa-paperclip"></span></button>
                        <button type="button" class="btn btn-warning btn-xs edit" onclick="CourseConfirmationEditor.initEditor()"><span class="glyphicon glyphicon-pencil"></span></button>
                        <button type="button" class="btn btn-success btn-xs save" onclick="CourseConfirmationEditor.save()"><span class="glyphicon glyphicon-ok"></span></button>
                        <button type="button" class="btn btn-danger btn-xs cancel" onclick="CourseConfirmationEditor.initView()"><span class="glyphicon glyphicon-remove"></span></button>
                        <input type="file" id="course-email-attachment" onchange="CourseConfirmationEditor.changeFileInput(this)" class="hidden" />
                    </div>
                </div>
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="panel-body gsmu-sub-panel-body panel-collapse collapse in" style="height: 192px!important">
            <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="#course-confirmation-emeail-additional-text" data-toggle="tab">Additional Text</a></li>
                <li role="presentation"><a href="#course-confirmation-emeail-attachment" data-toggle="tab">Attachments</a></li>
            </ul>
            <div class="tab-content">
                <div id="course-confirmation-emeail-additional-text" class="tab-pane fade in active">
                    <div id="course-confirmation-additional-text"></div>
                    <input type="hidden" id="course-confirmation-input" name="CourseConfirmationEmailExtraText" />
                </div>
                <div id="course-confirmation-emeail-attachment" class="tab-pane fade">
                    <table id="course-attachements-grid" class="table table-striped table-hover"></table>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Areas/Adm/Scripts/Widgets/CourseConfirmationEmail.js")