<div id="widget-course-transcripts">
    <div class="alert alert-warning fade in alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        <strong> Warning! : This course is Transcripted</strong> Please note, that any changes you make here will not be reflected in the transcript results.
    </div>
    <div class="panel panel-default hidden">
        <div class="panel-heading gsmu-sub-panel-heading">
            <div class="panel-title">
                Warning : This course is Transcripted
                <span class="pull-right clickable hidden">
                    <button id="show-transcript-records" onclick="courseTranscripts.transcriptClickButton(this)" type="button" class="btn btn-xs btn-info" style="vertical-align: middle;line-height: 15px;">Show Transcript Records</button>
                </span>
            </div>
        </div>
        <div class="panel-body gsmu-sub-panel-body panel-collapse collapse in">
            <div class="row form-group form-group-sm">
                <div class="col-lg-12 pad-bot-10">
                    Please note, that any changes you make here will not be reflected in the transcript results.
                </div>
                <div id="transcript-grid-container" class="col-lg-12" style="display:none">
                    <table id="course-transcript-grid" style="width:100%" class="table table-striped table-hover"></table>
                </div>
             </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Areas/Adm/Scripts/Widgets/CourseTranscripts.js")