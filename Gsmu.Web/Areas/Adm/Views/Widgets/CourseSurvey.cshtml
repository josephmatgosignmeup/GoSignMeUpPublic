<div id="widget-course-surveys">
    <div class="panel panel-default">
        <div class="panel-heading gsmu-sub-panel-heading">
            <div class="panel-title">
                Surveys
            </div>
        </div>
        <div class="panel-body gsmu-sub-panel-body panel-collapse collapse in" style="height: 250px;">
            <div class="row form-group form-group-sm">
                <div class="col-lg-12">
                    <div class="row pad-x-10 pad-bot-5">
                        <select id="course-survey-entity" class="form-control">
                            <option value="0">Student</option>
                            <option value="1">Teacher</option>
                        </select>
                    </div>
                    <div class="row pad-x-10 pad-bot-5">
                        <div class="form-group-sm">
                            <span>Send after Course Survey Show : </span><br /><br />
