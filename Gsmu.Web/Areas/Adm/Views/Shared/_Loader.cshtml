<style>
    .gsmu-loader {
        display: none;
        position: absolute;
        z-index: 20;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background: rgba( 255, 255, 255, .8 ) url('/Images/ajax-loader.gif') 50% 50% no-repeat;
    }
    .gsmu-loader-text {
        text-align: center;
        vertical-align: middle;
        display: block;
        height: 100%;
        width: 100%;
        line-height: 60;
        margin: 0 auto;
        position: relative;
    }
    body.gsmu-loader {
        overflow: hidden;
    }

    body.gsmu-loader {
        display: block;
    }
</style>
<div class="gsmu-loader">
    @*<span class="gsmu-loader-text">Please wait...</span>*@
</div>
<script type="text/javascript">
    var gsmuUIObject = {
        mask: function (target) {
            $(target).append($('.gsmu-loader').show());
        },
        unmask: function (target) {
            $(target).find('.gsmu-loader').hide();
        }
    }
</script>